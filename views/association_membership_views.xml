<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="view_association_membership_tree" model="ir.ui.view">
            <field name="name">association.membership.tree</field>
            <field name="model">association.membership</field>
            <field name="arch" type="xml">
                <list string="Association Memberships">
                    <field name="name"/>
                    <field name="governing_body"/>
                    <field name="membership_code"/>
                    <field name="expiry_date"/>
                    <field name="state"/>
                </list>
            </field>
        </record>

        <record id="view_association_membership_form" model="ir.ui.view">
            <field name="name">association.membership.form</field>
            <field name="model">association.membership</field>
            <field name="arch" type="xml">
                <form string="Association Membership">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="governing_body"/>
                                <field name="membership_code"/>
                            </group>
                            <group>
                                <field name="issue_date"/>
                                <field name="expiry_date"/>
                                <field name="state" readonly="1"/>
                            </group>
                        </group>
                        <group>
                            <field name="certificate_file" filename="certificate_filename"/>
                        </group>
                        <group>
                            <field name="note"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_association_membership" model="ir.actions.act_window">
            <field name="name">Association Memberships</field>
            <field name="res_model">association.membership</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first membership record
                </p>
            </field>
        </record>

        <menuitem id="menu_association_membership"
                  name="Memberships"
                  parent="base.menu_users"
                  action="action_association_membership"
                  sequence="100"/>
    </data>
</odoo>
