    <!-- Action -->
    <record id="action_lc_management" model="ir.actions.act_window">
        <field name="name">Letter of Credit</field>
        <field name="res_model">lc.management</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create and manage Letters of Credit here.
            </p>
        </field>
    </record>

    <!-- Menu Items -->
    <menuitem id="menu_lc_root" name="LC Management" sequence="10" web_icon="lc_management,static/description/icon.png"/>
    <menuitem id="menu_lc_main" name="Letters of Credit" parent="menu_lc_root" action="action_lc_management" sequence="1"/>
